<div class="container">
  <h2 class="title-lg mb">Questions</h2>

  <% @questions.each do |question| %>
    <p class="mb-sm <%= "text-hidden" if question.hidden %>">
      <%= link_to "question: #{question.id}", question_path(question) %>
    </p>
  <%end %>

  <p class="mt"><%= link_to "Write new question", new_question_path, class: 'button button-main' %></p>
</div>
