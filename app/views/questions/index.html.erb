<div class="container">
  <h2 class="title-lg mb">Recently joined us</h2>

  <div class="users-box">
    <% @users.each do |user| %>
      <%= render partial: 'users/user_avatar', locals: { user: user } %>
    <% end %>
  </div>
</div>

<div>
  <h2 class="container title-lg mt">
    Last <%= @questions.count %>
    <%= inclination(@questions.count, 'question', 'questions') %>
  </h2>
  <% @questions.each do |question| %>
    <div class="container mt-sm <%= "text-hidden" if question.hidden %>">

      <%= render question %>
    </div>
  <% end %>
</div>
